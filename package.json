{
  "name": "airecorder",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "vite build && electron-builder --mac",
    "electron:build:dir": "vite build && electron-builder --mac --dir"
  },
  "build": {
    "appId": "com.airecorder.app",
    "productName": "AIRecorder",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    }
  },
  "description": "AI-powered audio recorder and transcription tool",
  "author": "Raul Garcia",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "data_file_database": "^1.0.2",
    "ffmpeg-static": "^5.2.0",
    "node-audiorecorder": "^3.0.0",
    "node-microphone": "^0.1.6",
    "node-record-lpcm16": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.10.1",
    "remark-gfm": "^4.0.1",
    "sox-audio": "^0.3.0",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^29.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "wait-on": "^8.0.3"
  }
}
